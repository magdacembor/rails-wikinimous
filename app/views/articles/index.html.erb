<div class="container">
  <% @articles.each do |article| %>
    <h3>
      <%= link_to article.title, article_path(article.id), :class => "title" %>
      <%= link_to '✍️', edit_article_path(article) %>
      <%= link_to '☠️', article_path(article), method: :delete, data: { confirm: 'Sure?' } %>
    </h3>
    <p><%= article.content %></p>
  <% end %>
</div>
